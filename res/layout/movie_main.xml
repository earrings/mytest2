<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:id="@+id/linearLayout1">
	<LinearLayout 
	    android:id="@+id/surface_movie"
    	android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">
     <SurfaceView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/video_surface"/>  
	 </LinearLayout>       
        <LinearLayout
            android:id="@+id/control_movie"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/play"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                
                android:layout_weight="1"
                android:background="@drawable/moveback"
                android:src="@drawable/play" />

      <!--        <ImageButton
                android:id="@+id/pause"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:background="#FF000000"
                android:layout_weight="1"
                android:src="@drawable/pause" /> -->

            <SeekBar
                android:id="@+id/progress"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:background="@drawable/moveback"
                android:layout_weight="6.10" />
			
            <TextView
                android:id="@+id/movePosition"
                android:layout_width="40dip"
                android:background="@drawable/moveback"
                android:layout_height="30dip"
                android:gravity="center"
                 android:text="00:00"
                 android:textColor="#FFFFFF"
                >
                </TextView>
            <TextView
                android:id="@+id/moveMax"
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:gravity="center"
                 android:text="00:00"
                 android:textColor="#FFFFFF"
                 android:background="@drawable/moveback"
                >
                </TextView>
              <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:background="@drawable/moveback"
                 />
            
            <ImageButton
                android:id="@+id/scale1"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:background="#FF000000"
               
                android:src="@drawable/big1" />
            
            <ImageButton
                android:id="@+id/scale"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:background="#FF000000"
                android:src="@drawable/big2" 
                android:layout_weight="1"/>
        </LinearLayout>
        
        <ListView
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:id="@+id/lv">
        
       </ListView>

</LinearLayout>