<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/surface_movie"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical" >

        <SurfaceView
            android:id="@+id/video_surface"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/control_movie"
            android:layout_width="fill_parent"
            android:layout_height="30dip"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true" >

            <ImageButton
                android:id="@+id/play"
                android:layout_width="30dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/moveback"
                android:src="@drawable/play" />

            <SeekBar
                android:id="@+id/progress"
                android:layout_width="150dip"
                android:layout_height="30dip"
                android:layout_weight="6.10"
                android:background="@drawable/moveback" />

            <TextView
                android:id="@+id/movePosition"
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:background="@drawable/moveback"
                android:gravity="center"
                android:text="00:00"
                android:textColor="#FFFFFF" >
            </TextView>

            <TextView
                android:id="@+id/moveMax"
                android:layout_width="40dip"
                android:layout_height="30dip"
                android:background="@drawable/moveback"
                android:gravity="center"
                android:text="00:00"
                android:textColor="#FFFFFF" >
            </TextView>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:background="@drawable/moveback" />

            <ImageButton
                android:id="@+id/scale1"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:background="#FF000000"
                android:src="@drawable/big1" />

            <ImageButton
                android:id="@+id/scale"
                android:layout_width="wrap_content"
                android:layout_height="30dip"
                android:layout_weight="1"
                android:background="#FF000000"
                android:src="@drawable/big2" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

</LinearLayout>